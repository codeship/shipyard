#!/bin/bash
set -e # halt script on error

echo -e "************** Changed to Styleguide Directory **************"
cd ./styleguide
pwd

echo -e "\n\n************** Environment **************"
printenv | grep PERCY_PROJECT
printenv | grep JENKINS_URL
# printenv | grep ghprbPullId
echo -e "\n\n************** All Vars **************"
printenv

echo -e "\n\n************** Jekyll Build **************"
JEKYLL_ENV=test jekyll build --trace --baseurl=''

echo -e "\n\n************** Changed to Root Directory **************"
cd ../
pwd

echo -e "\n\n************** Percy Snapshot **************"
# percy snapshot --widths "375,768,1280" styleguide/_site/
